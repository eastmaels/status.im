								<div class="flex mr-6 items-end relative">
									<div class="relative flex">
										<%- image_tag("/img/private-and-secure-avatar.png", { srcset: '/img/private-and-secure-avatar-2x.png 2x', class: 'avatar relative z-20'}) %>
										<div class="absolute inset-0 flex items-center justify-center key z-index: 10 opacity-0">
											<%- image_tag("/img/private-and-secure-key.svg") %>
