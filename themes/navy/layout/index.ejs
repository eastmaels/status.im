					<div class="h-full px-8 py-32 md:p-32">
						<div class="row">
							<div class="col-md-11 col-lg-10">
								<%- image_tag("/img/account-creation-illustration.png", { srcset: '/img/account-creation-illustration-2x.png 2x'}) %>
