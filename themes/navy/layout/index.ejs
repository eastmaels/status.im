					<h1 class="leading-tight font-display text-6xl font-medium xl:text-7xl 2xl:text-8xl"><%- __('site.home.intro.title') %></h1>
					<p class="text-gray-600 mt-12 text-xl 2xl:text-4xl font-display font-medium leading-normal">
						<%- __('site.home.intro.description') %>
					</p>
					<div class="mt-12 md-max:mt-8">
						<a href="<%- show_lang() %>/get/" class="order-2 flex justify-between md:order-none border transition-all duration-200 linear border-primary-base hover:bg-primary-900 hover:text-white hover:border-primary-base transition-all linear rounded py-4 px-5 inline-flex bg-blue-base text-white font-special font-bold" style="min-width: 170px;">
							<%- __('site.link.get-status') %>
							<span class="pr-4 group-hover:translate-x-1 transform transition-all my-auto duration-200 linear"><%- image_tag('/img/icon-arrow-right-white.svg') %></span>
						</a>
					</div>
					<a href="#" target="_blank" class="group js-announcement inactive mt-32 font-special font-light text-lg text-gray-600 hover:text-primary-base hidden md:flex items-center">
						<span class="mr-4 bg-black uppercase tracking-wide font-special text-white text-base rounded p-2 leading-none"><%- __('site.home.intro.news') %></span>
						<b></b>
						<span class="ml-4 group-hover:translate-x-1 transform transition-all duration-200 linear"><%- image_tag('/img/icon-arrow-right.svg') %></span>
					</a>
				</div>
				<div class="bg-black relative mt-48 md:mt-0">
					<span class="bg-black w-screen absolute -z-1 left-0 h-full"></span>
					<div class="md:-ml-32 -mt-32 md:mt-0 mx-auto flex justify-center items-center md:block md:pt-20">
						<%- image_tag("/img/teaser-image.png", { srcset: '/img/teaser-image-2x.png 2x'}) %>
					</div>
				</div>
			</div>
		</div>
	</section>
	<!--END-HOME-INTRO-->
	<!--HOME-ALL-->
	<section>
		<div class="max-w-screen-2xl mx-auto lg:px-12">
			<div class="grid md:grid-cols-8 gap-24">
				<div class="flex flex-col md:col-span-3 col-span-6 px-8 justify-center items-start md:pt-0 pt-32">
					<h3 class="font-display text-4xl xl:text-5xl 2xl:text-6xl"><%- __('site.home.all.title') %></h3>
					<p class="text-gray-600 mt-12 text-lg font-medium 2xl:text-2xl font-display leading-relaxed"><%- __('site.home.all.description') %></p>
					<a href="#explore" class="js-scrollto transition-all duration-200 linear group py-4 pr-6 flex md:inline-flex justify-between items-center mt-32 border font-special font-semibold rounded border-white text-lg">
						<%- __('site.home.private.link') %>
						<span class="ml-6 group-hover:translate-y-1 rotate-90 transform transition-all duration-200 linear"><%- image_tag('/img/icon-arrow-right.svg') %></span>
					</a>
				</div>
				<div class="px-8 md:col-span-5 col-span-6">
					<div class="mx-auto relative flex justify-center items-center md:block pb-32 md:py-48">
						<div class="relative flex justify-center home-all">
							<%- image_tag("/img/home-all-1.png", { srcset: '/img/home-all-1-2x.png 2x', class: 'img-1 top-0 transform -translate-x-64 absolute z-10'}) %>
							<%- image_tag("/img/home-all-2.png", { srcset: '/img/home-all-2-2x.png 2x', class: 'img-2 z-10 relative'}) %>
							<%- image_tag("/img/home-all-3.png", { srcset: '/img/home-all-3-2x.png 2x', class: 'img-3 top-0 transform translate-x-64 absolute z-10'}) %>
							<div class="absolute overlay top-0 flex justify-center w-full left-0 z-20 opacity-0">
								<%- image_tag("/img/home-all-splash.png", { srcset: '/img/home-all-splash-2x.png 2x'}) %>
							</div>
							<div class="absolute overlay top-0 md:flex h-full justify-center w-full left-0 z-20 opacity-0 hidden">
								<div class="circles-container">
									<span class="circle circle-1 absolute"></span>
									<span class="circle circle-2 absolute"></span>
									<span class="circle circle-3 absolute"></span>
								</div>
							</div>
							<div class="absolute overlay top-0 h-full items-center flex justify-center w-full left-0 z-40 opacity-0">
								<%- image_tag("/img/home-all-logo.svg", { class: 'logo -mt-16'}) %>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</section>
	<!--END-HOME-ALL-->	
	<!--HOME-DECENTRALIZED-PRIVATE-->
	<section id="explore">
		<div class="max-w-screen-2xl mx-auto lg:px-12">
			<div class="grid md:grid-cols-2">
				<div class="bg-blue-gray-light relative">
					<span class="bg-blue-gray-light w-screen absolute -z-1 right-0 h-full"></span>
					<div class="h-full px-8 py-32 md:pr-16">
						<div class="row">
							<div class="col-md-11 col-lg-10">
								<%- image_tag("/img/private-message-illustration.png", { srcset: '/img/private-message-illustration-2x.png 2x'}) %>
								<h3 class="font-display text-4xl xl:text-5xl 2xl:text-6xl mt-24"><%- __('site.home.private.title') %></h3>
								<p class="text-lg 2xl:text-xl mt-6"><%- __('site.home.private.description') %></p>
								<a href="<%- show_lang() %>/private-messenger/" class="transition-all duration-200 linear group py-4 px-6 flex md:inline-flex justify-between items-center mt-12 border font-special font-semibold hover:bg-black hover:text-white rounded border-black text-lg">
									<%- __('site.home.private.link') %>
									<span class="ml-4 group-hover:translate-x-1 transform transition-all duration-200 linear"><%- image_tag('/img/icon-arrow-right.svg') %></span>
								</a>
							</div>
						</div>
					</div>
				</div>
				<div class="bg-black relative md:-mt-16">
					<span class="bg-black w-screen absolute -z-1 left-0 h-full"></span>
					<div class="h-full flex flex-col space-between px-8 py-32 md:p-32 text-white">
						<div class="flex-1 md:mt-12">
							<p class="text-lg 2xl:text-2xl text-gray-300"><%- __('site.home.wallet.subtitle') %></p>
							<h3 class="font-display text-4xl xl:text-5xl 2xl:text-6xl mt-4"><%- __('site.home.wallet.title') %></h3>
							<p class="text-lg 2xl:text-xl mt-6 text-gray-300"><%- __('site.home.wallet.description') %></p>
							<a href="<%- show_lang() %>/secure-wallet/" class="transition-all duration-200 linear group py-4 px-6 flex md:inline-flex justify-between items-center mt-12 border font-special font-semibold hover:bg-white hover:text-black rounded border-white text-lg">
								<%- __('site.link.learn-more') %>
								<span class="ml-4 group-hover:translate-x-1 transform transition-all duration-200 linear"><%- image_tag('/img/icon-arrow-right-white.svg') %></span>
							</a>
						</div>
						<div class="mt-12 md:-mb-32">
							<%- image_tag("/img/wallet-illustration.png", { srcset: '/img/wallet-illustration-2x.png 2x', class: 'mx-auto'}) %>
						</div>
					</div>
				</div>
			</div>
		</div>
	</section>
	<!--END-HOME-DECENTRALIZED-PRIVATE-->
	<!--HOME-WALLET-BROWSER-->
	<section>
		<div class="max-w-screen-2xl mx-auto lg:px-12">
			<div class="grid md:grid-cols-2">
				<div class="bg-black relative md:-mb-16 order-2 md:order-none">
					<span class="bg-black w-screen absolute -z-1 right-0 h-full"></span>
					<div class="h-full flex flex-col space-between px-8 py-32 md:pr-16 text-white">
						<div class="mt-12">
							<p class="text-lg 2xl:text-xl text-gray-300"><%- __('site.home.browser.subtitle') %></p>
							<h3 class="font-display text-4xl xl:text-5xl 2xl:text-6xl mt-4"><%- __('site.home.browser.title') %></h3>
							<p class="text-lg 2xl:text-xl text-gray-300 mt-4"><%- __('site.home.browser.description') %></p>
							<a href="<%- show_lang() %>/web-three-browser/" class="transition-all duration-200 linear group py-4 px-6 flex md:inline-flex justify-between items-center mt-12 border font-special font-semibold hover:bg-white hover:text-black rounded border-white text-lg">
								<%- __('site.link.learn-more') %>
								<span class="ml-4 group-hover:translate-x-1 transform transition-all duration-200 linear"><%- image_tag('/img/icon-arrow-right-white.svg') %></span>
							</a>
						</div>
						<div class="mt-12 md:mt-4 my-auto flex items-center justify-center flex-1">
							<%- image_tag("/img/browser-illustration.png", { srcset: '/img/browser-illustration-2x.png 2x', class: 'mx-auto'}) %>
						</div>
					</div>
				</div>
				<div class="bg-blue-gray-light relative order-1 md:order-none">
