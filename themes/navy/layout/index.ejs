								<h3 class="font-display text-4xl xl:text-5xl 2xl:text-6xl mt-4"><%- __('site.home.account-creation.title') %></h3>
								<p class="text-lg 2xl:text-xl mt-4"><%- __('site.home.account-creation.description') %></p>
								<a href="<%- show_lang() %>/account-creation/" class="transition-all duration-200 linear group py-4 px-6 flex md:inline-flex justify-between items-center mt-12 border font-special font-semibold hover:bg-black hover:text-white rounded border-black text-lg">
									<%- __('site.link.learn-more') %>
									<span class="ml-4 group-hover:translate-x-1 transform transition-all duration-200 linear"><%- image_tag('/img/icon-arrow-right.svg') %></span>
								</a>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</section>
	<!--END-HOME-WALLET-BROWSER-->
	<!--HOME-SECURITY-->
